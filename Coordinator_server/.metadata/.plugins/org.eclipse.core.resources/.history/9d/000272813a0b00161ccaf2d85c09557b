package messages;

import java.io.Serializable;

import entities.Student;

public class StudentMessage implements Serializable{
	
	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;
	private Student owner;
	private String message;

	public StudentMessage(Student owner, String message) {
		this.owner = owner;
		this.message = message;
	}
	
	/**
	 * Constructor for the Client_Thread class that receives the socket and
	 * attempts to create the Input and Output streams for receiving and sending
	 * messages
	 *
	 * @author Felipe Izepe
	 * @version 1.0
	 * @since 2016-04-25
	 * @param Socket
	 */
	public String getMessage() {
		return message;
	}
	
	
	public Student getOwner() {
		return owner;
	}
}
